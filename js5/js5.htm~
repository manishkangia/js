<script>
function validateForm(){
   console.log("formcalled");
   var i,validation=true;
   var form=document.getElementsByName("myForm")[0];
   var list_inputs=form.getElementsByClassName("input");
   for( i=0;i<list_inputs.length;i++){
     if (list_inputs[i].value==""){ 
       validation=false;
       alert(list_inputs[i].name+" must be filled out");
       return false;
     }
}    
   var text_area= form.getElementsByClassName("textarea")[0];
   var val=text_area.value.length;
   if(val<10){
     alert("text area needs to be atleast 10 characters");
     return false;
   }
  
   var check_box= form.getElementsByClassName("checkbox")[0];     
     if(validation==true && check_box.checked==false){
       alert("you must accept all the conditions my friend..else.. you wont see tomorrow morning.. boom!");
       return false;
     }
}
</script>
</head>
<body>
  <form name="myForm" action="" onsubmit="return validateForm()">
